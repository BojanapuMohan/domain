<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group form-alignment">
            <label for="inputEmail1" class="col-lg-4 control-label">Product type</label>
            <div class="col-lg-8">
              <%= f.text_field :product_type, class:"form-control", placeholder:"Product Type" %>
            </div>
          </div>
          <div class="form-group form-alignment">
            <label for="inputPassword1" class="col-lg-4 control-label">Product name</label>
            <div class="col-lg-8">
              <%= f.text_field :product_name, class:"form-control", placeholder:"Product name" %>
            </div>
          </div>
          <div class="form-group form-alignment">
            <label for="inputPassword1" class="col-lg-4 control-label">Product price</label>
            <div class="col-lg-8">
              <%= f.number_field :product_price, class:"form-control", placeholder:"Product price" %>
            </div>
          </div>
          <div class="form-group form-alignment">
            <label for="inputPassword1" class="col-lg-4 control-label">Product discount</label>
            <div class="col-lg-8">
              <%= f.text_field :product_discount, class:"form-control", placeholder:"Product discount %" %>
            </div>
          </div>
          <div class="form-group form-alignment">
            <label for="inputPassword1" class="col-lg-4 control-label">Product discription</label>
            <div class="col-lg-8 form-alignment">
              <%= f.text_area :product_discription, class:"form-control", placeholder:"Product discription" %>
            </div>
          </div>
          <div class="col-lg-4 pull-right">
            <%= f.submit "Save", class:"btn btn-sm btn-primary btn-block"%>
          </div>
<% end %>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="panel panel-default">
    <div class="panel-heading">Product Details</div>
    <div class="panel-body">
      <div class="form-group row">
            <label for="inputEmail1" class="col-lg-4 control-label">Product type</label>
            <div class="col-lg-8">
               <%= @product.product_type %>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword1" class="col-lg-4 control-label">Product name</label>
            <div class="col-lg-8">
               <%= @product.product_type %>
              
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword1" class="col-lg-4 control-label">Product price</label>
            <div class="col-lg-8">
              <%= @product.product_price %>

              
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword1" class="col-lg-4 control-label">Product discount</label>
            <div class="col-lg-8">
              <%= @product.product_discount %>
              
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword1" class="col-lg-4 control-label">Product discription</label>
            <div class="col-lg-8">
               <%= @product.product_discription %>
              
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword1" class="col-lg-4 control-label">Product status</label>
            <div class="col-lg-8">
               <%= @product.status %>
              
            </div>
          </div>
    </div>
    
     <div class="panel-footer">
      <%#= link_to 'Back', products_path, class:"btn  btn-primary" %>
      <div class="row">
        <% if current_user.present? && current_user.admin? %>
          <% if @product.status != 'Sold Out' %>
            <div class="col-lg-3">
              <%= link_to 'Edit', edit_product_path(@product), class:"btn  btn-primary" %> 
            </div>
          <% else %>
           <div class="col-lg-3"> <%= button_to "Assig", assign_product_products_path, method: :get, params: {product_id: @product.id}, :class => 'btn  btn-primary'%></div>
          <% end %>
        
        
      <% elsif @product.status != 'Sold Out' %>
        
          <div class="col-lg-3"> <%= button_to "Order Product", order_product_products_path, method: :get, params: {product_id: @product.id}, :class => 'btn  btn-primary'%></div>
       
       
        
      <% end %>
      <div class="col-lg-3">
        <%= link_to 'Back', products_path, class:"btn  btn-primary" %>
      </div>
      </div>
      
      
     </div>
 </div>

  </div>
</div>



